mixin video(video)
    a(href=`/videos/${video.id}`).video-mixin
        div.video-mixin__thumb(
        style=`background-image:url(${video.thumbUrl});
        background-size:cover;
        background-position:center`)
        div.video-mixin__data
            div.video-mixin__box
                img(src=video.owner.avatarUrl, crossorigin).video-mixin__homeavatar
            div.video-mixin__meta 
                div.video-mixin__title=video.title
                div.video-mixin__owername #{video.owner.name}
                div.video-mixin-views 조회수 #{video.meta.views}회 • 
                    span.video-mixin-createdAt=new Date(video.createdAt).toLocaleDateString("ko-kr", {year: 'numeric', month: 'numeric', day: 'numeric'})
